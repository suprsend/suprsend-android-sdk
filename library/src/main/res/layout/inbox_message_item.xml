<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/inbox_message_item_bg">

        <LinearLayout
            android:id="@+id/imageLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/descriptionText"
            android:layout_alignBottom="@id/descriptionText">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:minHeight="200dp"
                tools:background="#EFD2D2" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/imageLL"
            android:minHeight="200dp"
            android:padding="4dp"
            tools:background="#EFD8D8"
            tools:text="Seen Message -Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message Seen Message " />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buttonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionText"
            android:layout_marginTop="8dp"
            android:background="@drawable/inbox_message_item_action_bg"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            tools:text="Click Me" />
    </RelativeLayout>


</LinearLayout>